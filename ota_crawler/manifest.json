{
  "manifest_version": 3,
  "name": "OTA抓价 (v1.2.6)",
  "description": "酒店收益管理助手 - 自动抓取飞猪/携程价格 (v1.2.6)",
  "version": "1.2.6",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.ctrip.com/*",
    "*://*.trip.com/*",
    "*://hotels.ctrip.com/*",
    "*://m.ctrip.com/*",
    "https://revenuepilot.wangqihao520.workers.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ctrip.com/*",
        "*://*.trip.com/*",
        "*://hotels.ctrip.com/*",
        "*://m.ctrip.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}